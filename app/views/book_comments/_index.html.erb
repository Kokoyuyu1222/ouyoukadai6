
<% comments.each do |comment| %>
  <% unless comment.id.nil? %>
    <td><%= link_to "#{comment.user.name}さん", user_path(comment.user.id) %></td>
    <td><%= comment.comment %></td>
    <% if comment.user == current_user %>
      <td><%= link_to 'コメントを削除する', book_book_comment_path(book_id:@book, id: comment.id), method: :delete, remote: true,data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger " %></td>
    <% end %>
  <% end %>
<% end %>