<% if book.favorited_by?(current_user) %>

    <%= link_to 'いいね外す',book_favorites_path(book), method: :delete,remote: true  %><%= book.favorites.count %>
      <i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></i>
<% else %>

    <%= link_to 'いいねする',book_favorites_path(book), method: :post,remote: true  %><%= book.favorites.count %>
      <i class="glyphicon glyphicon-heart-empty" aria-hidden="true"></i>

<% end %>