<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>

			<h2>New book</h2>
			<%= render 'books/newform' ,book: @book_new %>

		</div>

		<div class="col-xs-9">
			<h2>Book detail</h2>

			<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, book_path %></td>
					<td><%= @book.body %></td>
					<td>
						<%= render 'favorites/favorite_form' ,book: @book, favorite: @favorite %>
					</td>
					<% if current_user.id == @user.id %>
					<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
				</tr>
			</table>
			<p><%= @book.book_comments.count %>件コメント</p>
			<table class="table">
				<thead>
					<tr>
						<th>name</th>
						<th>comment</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					
						<tr id="comments_area">
							<%= render partial: 'book_comments/index', locals: { comments: @comments } %>
						</tr>
				</tbody>
				</table>
					<tr>
						<% if user_signed_in? %>
						<%= render partial: 'book_comments/form', locals: { comment: @comment, book: @book } %>
						<% end %>
					</tr>
		</div>
	</div>
</div>
